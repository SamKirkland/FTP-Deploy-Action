{
  "name": "typescript-action",
  "version": "3.1.2",
  "private": true,
  "description": "TypeScript template action",
  "main": "dist/main.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "ncc build src/main.ts -o dist --watch",
    "build-docker": "docker build --tag action .",
    "run-docker": "act --workflows ./debug/ --secret username=UserNameHere --secret password=PasswordHere"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "SamKirkland",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.2.4",
    "@actions/exec": "1.0.4"
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@types/node": "12.12.8",
    "@zeit/ncc": "0.22.1",
    "jest": "25.5.3",
    "jest-circus": "25.5.3",
    "ts-jest": "25.4.0",
    "typescript": "3.8.3"
  }
}
